grayOne = #e9e7e8
grayTwo = #d7d3d2
grayThree = #e9e7e8

submitBlue = #18bcb1

.contact
  border-radius 0.2rem
  overflow hidden

  h5
    margin 0
    font-size 1rem
    color #444
    padding 1rem

.dummy
  background-image url('/images/earth-space.jpg')
  background-size cover
  margin-top 2rem
  text-align center
  border-radius 0.25rem 0.25rem 0 0

.profile-pic
  display inline-block
  margin 0 auto
  width 100px
  height 90px
  background-size cover
  border-radius 50%
  border 5px solid #fff
  position relative
  top 3rem


.contact-data
  line-height 2
  background-color grayOne
  min-height 20vh
  padding 4rem 1rem 2rem
  
  // dl 
  //   // display flex
  //   div
  //     display flex
  //     padding 2rem

  //     > * 
  //       flex 1 1 auto

.data-piece
  display flex
  text-align left

  dt
    flex 1 1 20%
    margin-right 1rem
    font-weight bold
  
  dd
    flex 1 1 70%
    // margin-left auto
    text-align left
    

.contact-me

  background-color grayTwo

  color #444

  label
    color #999

  

  form
    padding 1rem

  input, textarea
    padding 5%
    border none
    display block
    width 100%
    border-radius 0.2rem
    transition all 0.5s ease
    color #888

    &:focus
      outline none
      
      color #444
      box-shadow 0px 0px 10px 1px submitBlue

  textarea
    resize none


.submit-btn
  background-color submitBlue
  border none
  display block
  margin 1rem 0
  padding 1rem 1.5rem
  font-size 1rem
  border-radius 0.2rem
  width 100%
  color #fff
  transition all 0.2s ease

  &:hover
    background-color lighten(submitBlue, 5%)


.map-section
  background-color grayThree


#map
  // text-align center
  height 300px
  // padding 1rem
  width 100%
       

.additional-address
  line-height 2